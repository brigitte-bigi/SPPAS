{
  "id": "classphones",
  "name": "Classification of phonemes",
  "descr": "Create articulatory annotations from the time-aligned phonemes: place of articulation, manner of articulation, phonation, etc.",
  "icon": "articulation.png",
  "version": "2.4",

  "commands": {
    "windows": "PLUGIN_PATH\\\\..\\\\..\\\\..\\\\.sppaspyenv~\\\\Scripts\\\\python.exe PLUGIN_PATH\\\\phonemesmapping.py -m PLUGIN_PATH\\\\phonemes.csv",
    "macos": "PLUGIN_PATH/../../../.sppaspyenv~/bin/python3 PLUGIN_PATH/phonemesmapping.py -m PLUGIN_PATH/phonemes.csv",
    "linux": "PLUGIN_PATH/../../../.sppaspyenv~/bin/python3 PLUGIN_PATH/phonemesmapping.py -m PLUGIN_PATH/phonemes.csv"
  },

  "options": [
    {
      "id": "-i",
      "type": "file",
      "value": "input"
    },
    {
      "id": "-s",
      "type": "string",
      "value": "*",
      "text": "Symbol to be used if a phoneme is missing of the classification file:"
    },
    {
      "id": "-t",
      "type": "string",
      "value": "PhonAlign",
      "text": "Name of the tier indicating the time-aligned phonemes:"
    },
    {
      "id": "--quiet",
      "type": "bool",
      "value": false,
      "text": "Make the plugin quiet"
    },
    {
      "id": "--symbols",
      "type": "bool",
      "value": false,
      "text": "Map also the non-speech symbols (silence, pause, laughter...)"
    }
  ]

}
